<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/corner_background"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"

            >
            <Button
                android:id="@+id/button_menu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_menu"
                android:layout_marginBottom="5dp"
                android:background="?selectableItemBackgroundBorderless"
                />
            <Button
                android:id="@+id/button_favorite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_favorite"
                android:layout_marginBottom="5dp"
                android:background="?selectableItemBackgroundBorderless"
                />
            <Button
                android:id="@+id/button_watch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_watch"
                android:layout_marginBottom="5dp"
                android:background="?selectableItemBackgroundBorderless"
                />
            <Button
                android:id="@+id/button_selections"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_selections"
                android:layout_marginBottom="5dp"
                android:background="?selectableItemBackgroundBorderless"
                />
            <Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_settings"
                android:layout_marginBottom="5dp"
                android:background="?selectableItemBackgroundBorderless"
                />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="0dp"
            android:background="@color/purple_700"
            android:layout_gravity="bottom"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <FrameLayout
                android:id="@+id/frame3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="top"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_1"
                        android:layout_weight="1"
                        android:contentDescription="TODO"
                        />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_2"
                        android:layout_weight="1"
                        android:contentDescription="TODO"
                        />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_3"
                        android:layout_weight="1"
                        android:contentDescription="TODO"
                        />
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_4"
                        android:layout_weight="1"
                        android:contentDescription="TODO"
                        />

                </LinearLayout>


            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/disclaimer"
                android:autoLink="web"
                android:linksClickable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_bar" />

        </LinearLayout>



    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>